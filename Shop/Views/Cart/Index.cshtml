@model Cart
@{
    ViewData["Title"] = "Index";
    List<CartItem> Items = Model.Items;
    int listLength = Items.Count();
}

<main>
    <h2 class="cart-title">Twój koszyk</h2>

    @if (listLength == 0)
    {
        <p class="no-products-info">Twój koszyk jest obecnie pusty</p>
    }
    else
    {
    <form asp-action="FinalizeOrder" asp-controller="Order" method="post">

        <input type="hidden" asp-for="@Model.TotalAmount"  class="total-amount-input" />
        
        <table>
            <tr>
                <th></th>
                <th>Produkt</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Suma</th>
                <th></th>
            </tr>

            @for (int i = 0; i < listLength; i++)
            {
                int numberSizeValue = (int)Model.Items[i].Size;

                <input type="hidden" asp-for="@Items[i].Id" />
                <input type="hidden" asp-for="@Items[i].Name" />
                <input type="hidden" asp-for="@Items[i].Size" />
                <input type="hidden" asp-for="@Items[i].Price" />
                <input type="hidden" asp-for="@Items[i].Amount" />
                
                <tr>
                    <td>
                        <img src="@Items[i].ImagePath" />
                    </td>
                    <td>
                        <span><a asp-action="Details" asp-controller="Product" asp-route-productId="@Items[i].Id">@Items[i].Name</a></span>
                        <span>Rozmiar: @Items[i].Size</span>
                    </td>
                    <td class="price">@Items[i].FormatedPrice zł</td>
                    <td class="quantity-input-field">
                        <div class="decrease-quantity-button" onclick="decreaseQuantity(@i, @Items[i].Id, @numberSizeValue, @Items[i].Price)">-</div>
                        <input asp-for="@Items[i].Quantity" min="0" type="number" class="quantity-input" readonly>
                        <div class="increase-quantity-button" onclick="increaseQuantity(@i, @Items[i].Id, @numberSizeValue, @Items[i].Price)">+</div>
                    </td>
                    <td class="amount">@Items[i].FormatedAmount zł</td>
                    <td>
                        <a asp-action="RemoveProduct" asp-controller="Cart" asp-route-productId="@Items[i].Id" asp-route-productSize="@Items[i].Size">Usuń</a>
                    </td>
                </tr>
            }

            <tr>
                <td></td>
                <td>Razem</td>
                <td></td>
                <td></td>
                <td class="total-amount">@Model.FormatedTotalAmount zł</td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td colspan="2"><button class="cart-submit-button" type="submit">Kupuję</button></td>
            </tr>
        </table>
    </form>
    }

</main>

<script src="~/js/cart.js"></script>