@model Shop.ViewModels.AddToCartViewModel

<form asp-action="AddProduct" asp-controller="Cart" method="post">

    @if (Model.Quantity >= 1)
    {
        <input type="hidden"asp-for="@Model.Id" />

        bool check = true;

        @for (int i = 0; i < Model.Sizes.Count(); i++)
        {
            if (Model.Sizes[i].Quantity >= 1)
            {
                int sizeValue = (int)Model.Sizes[i].Size;

                <label>@Model.Sizes[i].Size</label>

                if (check)
                {
                    <input type="radio" asp-for="SelectedSize" value="@sizeValue" checked />
                    check = false;
                }
                else
                {
                    <input type="radio" asp-for="SelectedSize" value="@sizeValue" />
                }
            }
        }

        <input name="quantity" type="number" value="1" />

        <button type="submit">Dodaj do koszyka</button>
    }
    else
    {
        <p>Produkt obecnie niedostępny</p>
    }

</form>