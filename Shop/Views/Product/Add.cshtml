@model Shop.ViewModels.CreateProductViewModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add Product</h1>

<form asp-action="Add" asp-controller="Product" method="post">

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size">Category:</label>
        <select asp-for="Size" asp-items="Html.GetEnumSelectList<Shop.Enums.Size>()"></select>
        <span asp-validation-for="Size"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color">Category:</label>
        <select asp-for="Color" asp-items="Html.GetEnumSelectList<Shop.Enums.Color>()"></select>
        <span asp-validation-for="Color"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender">Category:</label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Shop.Enums.Gender>()" id="Gender"></select>
        <span asp-validation-for="Gender"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<Entities.Enums.Category>()" id="Category"></select>
        <span asp-validation-for="Category"></span>
    </div>

    <button type="submit">Add product</button>

</form>
