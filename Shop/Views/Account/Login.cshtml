@model Shop.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<main>

    <form asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post" class="account-form">

        <div class="header">
            <span>Logowanie</span>
            <a asp-action="Register" asp-controller="Account" class="link">Rejestracja</a>
        </div>

        <div class="form-group">
            <input asp-for="Email" type="text" placeholder="Adress email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" placeholder="Hasło" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group remember-me">
            <input asp-for="RememberMe">
            <label asp-for="RememberMe">Zapamiętaj mnie</label>
        </div>

        <a asp-action="ForgotPassword" asp-controller="Account" class="custom-link">Nie pamiętam hasła</a>

        <div asp-validation-summary="ModelOnly"></div>

        <button type="submit">Zaloguj</button>

    </form>
</main>