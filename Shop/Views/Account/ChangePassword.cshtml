@model Shop.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

    <main>
        <form asp-action="ChangePassword" asp-controller="Account" method="post" class="account-form">

            <div class="header">
                <span>Change password</span>
            </div>

            <div class="form-group">
                <input asp-for="CurrentPassword" placeholder="Current password" />
                <span asp-validation-for="CurrentPassword"></span>
            </div>

            <div class="form-group">
                <input asp-for="NewPassword" placeholder="New password" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm password">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div asp-validation-summary="ModelOnly"></div>

            <button type="submit">Change password</button>
        </form>
    </main>

