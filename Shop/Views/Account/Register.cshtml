@model Shop.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

    <main>

        <form asp-action="Register" asp-controller="Account" method="post" class="account-form">

            <div class="header">
                <a asp-action="Login" asp-controller="Account" class="link">Login</a>
                <span>Register</span>
            </div>

            <div class="form-group">
                <input asp-for="FirstName" placeholder="First name" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" placeholder="Last name" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" placeholder="Email Address" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit">Register</button>

            <div asp-validation-summary="ModelOnly"></div>

        </form>

    </main>