@model Shop.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

    <main>

        <form asp-action="Register" asp-controller="Account" method="post" class="account-form">

            <div class="header">
                <a asp-action="Login" asp-controller="Account" class="link">Logowanie</a>
                <span>Rejestracja</span>
            </div>

            <div class="form-group">
                <input asp-for="FirstName" placeholder="Imię" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" placeholder="Nazwisko" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" placeholder="Adres email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" placeholder="Hasło" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Potwierdź hasło" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit">Zarejestruj</button>

            <div asp-validation-summary="ModelOnly"></div>

        </form>

    </main>